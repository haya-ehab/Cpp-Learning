{
  "version": "0.2.0",
  "configurations": [
    
    {
      "name": "C++ Run with MinGW",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/a.exe",  // Or whatever you named your output
      "args": [],
      "stopAtEntry": false,
      "cwd": "${workspaceFolder}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\mingw64\\bin\\gdb.exe",  // <-- Make sure this is MinGW GDB
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
          
        }
      ]
    }
  ]
}

